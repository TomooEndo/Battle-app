

<div class="container">
  <h3>試合予定を追加</h3>
    <%= form_tag("/create") do %>
    
      <div class="form-group">
        <%= label_tag "Username", "ユーザー名" %>
        <%= text_field :cards, :Username, id:"Username", class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag "Title", "試合名" %>
        <%= text_field :cards, :Title, id:"Title", class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag "Enemyname", "対戦相手" %>
        <%= text_field :cards, :Enemyname, id:"Enemyname", class:"form-control" %>
      </div>
    
      <div class="form-group">
        <%= label_tag "Cdate", "試合日" %>
        <%= text_field :cards, :Cdate, id:"Cdate", class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag "Cplace", "試合会場" %>
        <%= text_field :cards, :Cplace, id:"Cplace", class:"form-control" %>
      </div>
    
      <div class="form-group">
        <%= label_tag "Ccomment", "コメント" %>
        <%= text_field :cards, :Ccomment, id:"Ccomment", class:"form-control" %>
      </div>
      
      <%= submit_tag "追加", class:"btn btn-danger" %>
  
  <% end %> 
  
    <div> <a href="/" class="btn btn-danger">トップに戻る</a> </div>

</div>
